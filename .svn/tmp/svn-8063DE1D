<template>
  <div>
    {{ getSanaText("Account") }}
    <sana-qtybox v-if="(!IsDataLaoding)"></sana-qtybox>
    {{getSanaText("AcceptQuote")}}
    {{getSanaText("Basket_ShippingCostsTooltipBody")}}
    {{getSanaText("BillingAddress")}}
    {{getSanaText("ButtonAltText_Send")}}
    {{getSanaText("ChangePassword_NewPassword")}}
    {{getSanaText("Newtext","newtext")}}
  </div>
</template>
<script>
import { mapActions } from "vuex";

import { FETCH_SEARCH_RESULT } from "../../store/action-types";
import SanaTextManager from "../../helpers/sana-text-manager";

const QtyBox = () =>
  import(/* webpackChunkName:"qtybox" */ "../shared/ui/QuantityBox.vue");

export default {
  name: "Search",

  // components.
  components: {
    "sana-qtybox": QtyBox
  },

  // local state.
  data() {
    return {
      ListItems: {},
      IsDataLaoding: false,
      searchOptions: { query: "1", pagesize: 10 }
    };
  },

  // props for the compoment.
  props: {},

  // Life sycle hooks.
  created() {
    this.IsDataLaoding = true;
    this.fetchSearchResult(this.searchOptions).then(
      (this.IsDataLaoding = false)
    );
  },

  mounted() {},

  // vue defult propetes for data manupilation.
  watch: {},

  filters: {},

  computed: {},

  methods: {
    ...mapActions("products", {
      fetchSearchResult: FETCH_SEARCH_RESULT
    }),
    getSanaText(key, defult = "") {
      return SanaTextManager.getSanaText(key, defult);
    }
  }
};
</script>
