@mixin common-button{
    height: 40px;
    box-sizing: border-box;
    width: 140px;
    padding-left: 15px;
    padding-right: 15px;
    text-align: center;
    font-size: 14px;
    border-radius: 20px;
    cursor: pointer;
}

.ioo-btn{
    @include common-button;
        &.ioo-btn-primary{
            border: 2px solid $zf-color-cyan;	
            background-color: $zf-color-cyan;
            color: $zf-color-white;
            transition: ease 300ms;
                &:hover,&.hover{
                    background-color: $zf-color-blue;
                    border-color: $zf-color-blue;
                }
                &.long-text{
                    font-size: 12px;
                    line-height: 14px;
                    white-space: pre-wrap;
                    word-break: normal;
                    overflow: hidden;
                }
                &:active{
                    border: 2px solid $zf-color-cyan;	
                    background-color: $zf-color-cyan;
                    color: $zf-color-white;
                }
        }
        &.ioo-btn-default{
            border: 2px solid $zf-color-cyan;	
            background-color: $zf-color-white;
            color: $zf-color-cyan;
            transition: ease 300ms;
                &:hover,&.hover{
                    background-color: $zf-color-cyan;
                    border-color: $zf-color-cyan;
                    color: $zf-color-white;
                }
                &:active{
                    border: 2px solid $zf-color-cyan;	
                    background-color: $zf-color-white;
                    color: $zf-color-cyan;
                }
        }

        span.btn-arrow-right{
            &::before{
            content: url(/assets/arrow-white-right.png)
            }
        }
}