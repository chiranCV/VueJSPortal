import config from "../config.json";

class GlobalHelper {
  static addnewProductToLastviewedIdList = (newItem, initiallist) => {
    let lastvieditemids = initiallist || [];
    if (lastvieditemids) {
      lastvieditemids.push(newItem);
      lastvieditemids = [...new Set(lastvieditemids)];
      if (lastvieditemids.length > config.MaxLastviewedToKeep) {
        lastvieditemids.shift();
      }
    }
    return lastvieditemids;
  };
}

export default GlobalHelper;
