      product: {},
      detailsModel: {},
      productTypes: [],
      quantityModel: {},
      quantity: 1,
      selectedProductType: null,
      selectedProductTypeId: null,
      selectedProductTypeTitle: null,
      isLoading: false,
      cars: [],
