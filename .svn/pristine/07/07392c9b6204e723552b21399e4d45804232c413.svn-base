.product-grid-container {
    &.grid-carousel-wrapper {
      position: relative;
    .product-info {
      .btn-block {
        .ioo-btn-default {
          min-width: 125px;
        }
      }
    }
  }
}
.grid-carousel-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 20px 0 80px;
  .grid-carousel-nav-container {
    width: 40px;
    height: 54px;
    border: 1px solid #ddd;
    z-index: 9;
    &.right-nav-container {
      position: absolute;
      right: -20px;
      top: 102px;
      background: #fff;
    }
    &.left-nav-container {
      position: absolute;
      left: -20px;
      top: 102px;
      background: #fff;
    }
  }
}

.grid-carousel {
  display: flex;
  justify-content: center;
  width: 100%;
  &--overflow-container {
    overflow: hidden;
  }

  &--nav__left,
  &--nav__right {
    display: inline-block;
    width: 15px;
    height: 15px;
    padding: 10px;
    box-sizing: border-box;
    border-top: 2px solid $zf-color-cyan;
    border-right: 2px solid $zf-color-cyan;
    cursor: pointer;
    margin: 0 10px;
    transition: transform 150ms linear;
    &[disabled] {
      opacity: 0.2;
      border-color: black;
    }
  }

  &--nav__left {
    position: relative;
    top: 16px;
    right: -4px;
    transform: rotate(-135deg);
    &:active {
      transform: rotate(-135deg) scale(0.9);
    }
  }

  &--nav__right {
    position: relative;
    top: 16px;
    right: 8px;
    transform: rotate(45deg);
    &:active {
      transform: rotate(45deg) scale(0.9);
    }
  }
}

.grid-carousel-cards {
  display: flex;
  transition: transform 150ms ease-out;
  transform: translatex(0px);
  margin-left: -15px;
  margin-right: -15px;
  .grid-carousel--card {
    cursor: pointer;
    z-index: 3;
    &:last-child {
      margin-right: 0;
    }

    img {
      vertical-align: bottom;
      border-top-left-radius: 4px;
      border-top-right-radius: 4px;
      transition: opacity 150ms linear;
      user-select: none;

      &:hover {
        opacity: 0.5;
      }
    }
  }
}

