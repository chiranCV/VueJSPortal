.product-info  {
  .dropdown-list-text-only {
    .zfbtn {
      position: relative;
    }
    .down-arrow {
      &:before {
        content: "";
        background-image: url(/img/arrow-blue-down.741ccd7e.svg);
        background-repeat: no-repeat;
        width: 11px;
        height: 6px;
        position: absolute;
        right: -15px;
        top: 5px;
      }
    }
    .dropdown-menu {
      width:125px;
      min-width: 65px;
      padding: 0;
      li {
        width: 100%;
        padding: 5px 5px 0 5px;
        &:hover {
          background-color: #7f7f7f;
        }
        a {
          color: #000;
        }
      }
    }
  }

}
.grid-carousel-wrapper {
  .list-dropdown-text {
    .dropdown-text-area {
      span {
        max-width: 75px;
      }
    }
  }
}
.list-dropdown-text {
  .dropdown-text-area {
    span {
      max-width: 89px;
      white-space: nowrap;
      overflow: hidden !important;
      text-overflow: ellipsis;
      margin-bottom: 5px;
    }
  }
  ul {
    transform: none !important;
    top: 11px !important;
    li {
      &:hover {
        background-color: #7f7f7f;
      }
    }
  }
}
.dropdown-list-text-only  {
  ul {
    li {
      a {
        color: #000 !important;
      }
    }
  }
}
.language-selector-container{
  .down-arrow{
    position: relative;
    float: right;
      &:before{
        // content:"^";
        // transform: rotate(180deg);
        // position: absolute;
        // padding-right: 4px;
        content: "";
        background-image: url(/img/arrow-blue-down.741ccd7e.svg);
        background-repeat: no-repeat;
        width: 11px;
        height: 6px;
        position: absolute;
        right: -14px;
        top: 13px;
      }
  }
  .dropdown-menu{
    li{
      display: block;
      width: 100%;
      height: 24px;
      padding: 2px 10px;
      &:hover{
        background: #1179BF;
        span{
          color:#fff;
        }
      }
    }
  }
}