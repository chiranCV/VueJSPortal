
@font-face {
  font-family: "ZF Prometo", sans-serif;
  src: url(./fonts/ZFPrometo_Lt/ZFPrometo_Lt.ttf);
  src: url(./fonts/ZFPrometo_Lt/ZFPrometo_W_Lt.eot);
  src: url(./fonts/ZFPrometo_Lt/ZFPrometo_W_Lt.woff);
  src: url(./fonts/ZFPrometo_Lt/ZFPrometo_W_Lt.woff2);
  font-weight: 300;
}

@font-face {
  font-family: "ZF Prometo", sans-serif;
  src: url(./fonts/ZFPrometo_Md/ZFPrometo_Md.ttf);
  src: url(./fonts/ZFPrometo_Md/ZFPrometo_W_Md.eot);
  src: url(./fonts/ZFPrometo_Md/ZFPrometo_W_Md.woff);
  src: url(./fonts/ZFPrometo_Md/ZFPrometo_W_Md.woff2);
  font-weight: 500;
}

@font-face {
  font-family: "Verdana", sans-serif;
  src: url("./fonts/verdana/Verdana.ttf");
  src: url("./fonts/verdana/Verdana.eot");
  src: url("./fonts/verdana/Verdana.woff");
  font-style: normal;
  font-weight: 500;
}



h1,
h2,
h3,
h4,
h5,
h6,
span {
  font-family: "ZF Prometo", sans-serif;
  color: $black;
  font-weight: 300;
  
}

button,
a {
  font-family: "Verdana", sans-serif;
  &:focus {
    outline: none;
  }
}

h1 {
  font-size: 48px;
  line-height: 56px;
  
}

h2 {
  font-size: 40px;
  line-height: 48px;
}

h3 {
  font-size: 32px;
  line-height: 40px;
}

h4 {
  font-size: 28px;
  line-height: 36px;
}

h5 {
  font-size: 24px;
  line-height: 32px;
}

h6 {
  font-size: 20px;
  line-height: 28px;
}

p {
  font-size: 14px;
  line-height: 16px;
  margin-bottom: 0.5rem;
  font-family: "Verdana", sans-serif;
  text-align: left;
  color: #000;
}
span {
  font-size: 12px;
  line-height: 14px;
  color: $black-light;
}
a {
  font-size: 12px;
  line-height: 20px;
  color: $zf-color-cyan;
  float: left;

  &:hover {
    color: $zf-color-cyan-hover;
  }
}
.font-bold{
    font-weight: 500;
}
.black-light{
  color: $black-light;
}
input{
  color: $black-light;
}