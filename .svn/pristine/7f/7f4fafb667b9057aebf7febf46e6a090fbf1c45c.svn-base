@mixin common-button{
    height: 40px;
    box-sizing: border-box;
    min-width: 140px;
    padding-left: 15px;
    padding-right: 15px;
    text-align: center;
    font-size: 14px;
    font-family: Verdana;
    border-radius: 20px;
    white-space: nowrap;
    cursor: pointer;
}
@mixin backgroundicon($content,$url,$width,$height) {
    background-repeat: no-repeat;
    background-size: contain;
    display: inline-block;
    content: $content;
    background-image: $url;
    width: $width;
    height: $height;
}

/* icons for all the buttons */
@mixin btn-primary-inner {
    span.btn-arrow-right{
                
        &::before{
            @include backgroundicon(" ",url("./assets/arrow-white-right.png"),15px,15px);
        }
    }
    span.btn-search-icon{
        &::before{
            @include backgroundicon(" ",url("./assets/search-left.png"),18px,18px);
        }
    }
    
}
@mixin btn-default-inner {
    span.btn-arrow-right{
        &::before{
            @include backgroundicon(" ",url("./assets/paggination-right.png"),15px,15px);
        }
    }
    span.btn-cart{
        &::before{
            @include backgroundicon(" ",url("./assets/cart-basket.svg"),18px,18px);
        }
    }
}

/* icons for all the buttons */


.ioo-btn{
    @include common-button;
        &.no-edge{
            border-radius: 0px;
        }

        /* Primary buttons */
        &.ioo-btn-primary{
            position: relative;
            border: 2px solid $zf-color-cyan;	
            background-color: $zf-color-cyan;
            color: $zf-color-white;
            transition: ease 300ms;
                &:hover,&.hover{
                    background-color: $zf-color-blue;
                    border-color: $zf-color-blue;
                }
                &.long-text{
                    font-size: 12px;
                    line-height: 14px;
                    white-space: pre-wrap;
                    word-break: normal;
                    overflow: hidden;

                }
                &:active{
                    border: 2px solid $zf-color-cyan;	
                    background-color: $zf-color-cyan;
                    color: $zf-color-white;
                }
        }

        /* Default buttons with white background */
        &.ioo-btn-default{
            border: 2px solid $zf-color-cyan;	
            background-color: $zf-color-white;
            color: $zf-color-cyan;
            transition: ease 300ms;
                
                @include btn-default-inner;

                &:hover,&.hover{
                    background-color: $zf-color-cyan;
                    border-color: $zf-color-cyan;
                    color: $zf-color-white;
                    
                    @include btn-primary-inner;

                }
                &:active{
                    border: 2px solid $zf-color-cyan;	
                    background-color: $zf-color-white;
                    color: $zf-color-cyan;

                    @include btn-default-inner;
               
                }
        }
        span.btn-inner{
            display: flex;
            justify-content: center;
            color: inherit;
            font-size: inherit;
            line-height: inherit;
            font-weight: inherit;
            span{
                display: flex;   
                align-items: center;
                justify-content: center;
            }
            span.btn-text{
                color: inherit;
                font-size: inherit;
                line-height: inherit;
                font-weight: inherit;
                padding-right: 5px;
                padding-left: 5px;
                height: 34px;
                text-align: center; 
                overflow: hidden;
                
            }
            @include btn-primary-inner;
        }
        
}

.ioo-btn-link{
    span.btn-arrow-right{
        padding-right: 10px;
        &::before{
            @include backgroundicon(" ",url("./assets/paggination-right.png"),10px,15px);
            vertical-align: middle;

        }
    }
}
.search-container{
    .ioo-btn{
        min-width: 116px;
    
        .btn-search-icon{
            &::before{
                @include backgroundicon(" ",url("./assets/search-left.png"),18px,18px);
            }
        }
    }

}