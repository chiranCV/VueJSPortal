<template>
  <div>
    <sana-button
      v-bind:BtnId="'PrintPreview'"
      BtnClass="ioo-sm-btn check-inv-btn"
      BtnTitle="Print Preview"
      BtnTitleSanaTextKey="IOO_PrintPreview"
      BtnText="Print Preview"
      BtnTextSanaTextKey="IOO_PrintPreview"
      v-on:onButtonClick="openPrintPreview"
    ></sana-button>

    <div class="d-flex flex-row float-right pt-2">
      <div class="pr-2">
        <span class="primary-color font-verdana">Print preview</span>
      </div>
      <div>
        <img class="img-fluid" src="@/assets/print.svg">
      </div>
    </div>
    <sana-model-popup ref="global_inventory_model_popup">
      <div class="modal-content">
        <div class="modal-header">
          <sana-button
            v-bind:BtnId="'PrintPreviewPrint'"
            BtnClass="ioo-sm-btn check-inv-btn"
            BtnTitle="Print"
            BtnTitleSanaTextKey="IOO_PrintPreviewPrint"
            BtnText="Print"
            v-on:onButtonClick="printPage"
          ></sana-button>
          <button type="button" data-dismiss="modal" aria-label="Close" class="close">
            <span aria-hidden="true">Ã—</span>
          </button>
        </div>
        <div class="modal-body" id="printData">
          <component v-bind:is="dynamicComponent" v-bind:IsPrintPreview="true"></component>
        </div>
      </div>
    </sana-model-popup>
  </div>
</template>

<script>
import $ from "jquery";
import Printd from "printd";
import Button from "./ui/Button.vue";
import ModelPopup from "./ui/ModelPopup.vue";
import DetailsPage from "../product-detail/ProductDetail.vue";

export default {
  name: "PrintPreview",
  components: {
    "sana-button": Button,
    "sana-model-popup": ModelPopup
  },
  props: {
    Html: {
      type: String,
      required: false
    }
  },
  data() {
    return {
      dynamicComponent: DetailsPage
    };
  },
  created() {},
  methods: {
    openPrintPreview() {
      const element = this.$refs.global_inventory_model_popup.$el;
      $(element).modal("show");
    },
    printPage() {
      let style;
      const innerStyles = document.getElementsByTagName("style");
      Array.from(innerStyles).forEach((element) => {
        style += element.innerText;
      });
      const d = new Printd();
      const styles = [style];
      const data = document.getElementById("printData");
      d.print(data, styles);
    }
  }
};
</script>
