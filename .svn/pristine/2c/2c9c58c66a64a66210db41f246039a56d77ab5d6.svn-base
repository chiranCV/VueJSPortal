// Mixin for get Sana text

import $ from "jquery";
import SanaTextManager from "../helpers/sana-text-manager";
import SiteSettingsManager from "../helpers/site-settings-manager";

export default {
  data() {
    return {
      ShopContext: SiteSettingsManager.getShopContext()
    };
  },
  methods: {
    UserHasAbilityTo(abilityName) {
      return SiteSettingsManager.userHasAbilityTo(abilityName);
    },
    GetSanaText(key, defult = "") {
      return SanaTextManager.getSanaText(key, defult);
    },
    GetProductTypeValue(Product) {
      if (Product !== undefined) {
        if (Product.Standard) {
          // return 'Standard';
          return { Id: "00", Title: "Standard" };
        }
        if (Product.New) {
          /* return 'New'; */
          return { Id: "01", Title: "New" };
        }
        if (Product.RemanWith) {
          /* return 'RemanWith'; */
          return { Id: "02", Title: "RemanWith" };
        }
        if (Product.RemanWithout) {
          /* return 'RemanWithout'; */
          return { Id: "02", Title: "RemanWithout" };
        }
        return "";
      }
      return this.GetDymmyProductTypeValue();
    },
    GetDymmyProductTypeValue() {
      return { Id: "-1", Title: "Select" };
    },
    ShowLoadingDialog(show = true) {
      const el = $("#sanaLoadingDialog");
      const { state } = this.$store;
      state.isLoading = show;
      console.log("state", this.$store.state);
    }
  }
};
