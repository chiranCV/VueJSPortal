.vnis {
  *,
  *::after,
  *::before {
    box-sizing: border-box;
  }
  &__input {
    &::-webkit-outer-spin-button,
    &::-webkit-inner-spin-button {
      -webkit-appearance: none;
    }
  }
  &__button {
    -webkit-appearance: none;
    transition: background 0.5s ease;
    background: #387e90;
    border: 0;
    color: #fff;
    cursor: pointer;
    float: left;
    font-size: 20px;
    height: 40px;
    margin: 0;
    width: 40px;
    &:hover {
      background: lighten(#387e90, 10%);
    }
    &:focus {
      outline: 1px dashed lighten(#387e90, 20%);
      outline-offset: -5px;
    }
  }
}
.product-grid-container,.search-list-container {
  .quantity-box-pm-ic-block {
    right: 5px;
  }
}
.search-list-container {
  .qty-box-block {
    margin-top: 24px;
    input {
      height: 34px;
      max-width: 89px;
    }
    .quantity-box-pm-ic-block {
      top: 5px
    }
  }
}

.quantity-box-pm-ic-block {
  width: 17px;
  height: 25px;
  border: 1px solid #ddd;
  border-radius: 100px / 50px;
  position: absolute;
  right: 19px;
  top: 8px;
  border-radius: 50px;
  .vnis__button {
    background: transparent;
    color: #6c6c6c;
    height: auto;
    width: auto;
    font-size: 12px;
    font-weight: bold;
    position: relative;
    top: 0px;
    margin-left: -2px;
    font-family: monospace !important;
    &.vnis__button__increment {
      top: 0px;
    }
    &.vnis__button__decrement {
      top: -10px;
    }
    &:focus {
      outline: none !important;
    }
  }
}
.qty-box {
  position: relative;
  input[type=number] {
    -moz-appearance:textfield;
  }
}
.qty-box-block {
  position: relative;
  input[type=number] {
    -moz-appearance:textfield;
  }
}