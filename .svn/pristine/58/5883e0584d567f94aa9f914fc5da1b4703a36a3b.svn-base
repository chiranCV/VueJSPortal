.product-info  {
  .dropdown-list-text-only {
    .zfbtn {
      position: relative;
    }
    .down-arrow {
      &:before {
        content: "";
        background-image: url(/img/arrow-blue-down.741ccd7e.svg);
        background-repeat: no-repeat;
        width: 11px;
        height: 6px;
        position: absolute;
        right: -15px;
        top: 5px;
      }
    }
    .dropdown-menu {
      width: 1vw;
      min-width: 65px;
      padding-left: 5px;
    }
  }

}