.ioo-clearfix {
 float: left;
 width: 100%;
}
.border-line {
  margin-top: 0;
  margin-bottom: 0;
  border: 0;
  border-top: none;
  margin-left: 15px;
  height: 2px;
  background-color: #efefef;
  float: left;
  width: 500px
}
.inner-header {
  margin-bottom: 34px;
}
a {
  cursor: pointer;
}
  a:not([href]):not([tabindex]),.link-text {
    color: $zf-color-dblue;
  }
  .smFont {
    font-size: 10px;
    line-height: 14px;
    color: #000;
    font-family: "Verdana", sans-serif;
  }
  .smMrgTp {
    margin-top: 0.7rem;
  }
  .hr-seprator {
    float: left;
    height: 20px;
    width: 1px;
    background-color: $zf-color-seprator;
    margin: 2px 10px;
  }
  input[type="text"] {
    height: 52px;
  }
  input {
    border: 1px solid $black-lighter;
    border-radius: 0px !important;
    background-color: #ffffff;
    &:focus {
      outline: none;
    }
  }
  ::-webkit-input-placeholder {
    /* Chrome/Opera/Safari */
    color: $black-light;
    font-family: Verdana;
    font-size: 14px;
    line-height: 24px;
  }
  ::-moz-placeholder {
    /* Firefox 19+ */
    color: $black-light;
    font-family: Verdana;
    font-size: 14px;
    line-height: 24px;
  }
  :-ms-input-placeholder {
    /* IE 10+ */
    color: $black-light;
    font-family: Verdana;
    font-size: 14px;
    line-height: 24px;
  }
  :-moz-placeholder {
    /* Firefox 18- */
    color: $black-light;
    font-family: Verdana;
    font-size: 14px;
    line-height: 24px;
  }
  .popUpTable {
    width: 100%;
    thead {
      th {
        width: 25%;
        color: $black-light;
        font-family: "Verdana", sans-serif;
        font-size: 12px;
        font-weight: bold;
        line-height: 14px;
        padding: 15px 10px;
        float: left;
      }
    }
    tbody {
      height: 200px;
      overflow-y: auto;
      width: 100%;
    }
    thead,
    tbody,
    tr,
    td,
    th {
      display: block;
      float: left;
      width: 100%;
    }
    tbody {
      td {
        width: 25%;
        float: left;
      }
    }
    td {
      width: 25%;
      font-family: "Verdana", sans-serif;
      font-size: 12px;
      line-height: 14px;
      padding: 15px 10px;
      border-top: 1px solid #bfbfbf;
    }
  }
  .disinlineflex {
    display: -webkit-inline-flex;
    display: -ms-inline-flexbox;
    display: inline-flex;
  }
   .clickableLink {
    font-size: 12px;
    line-height: 14px;
    color: #1179BF;
    cursor: pointer;
    font-family: "Verdana", sans-serif;
}

.dropdown-menu {
  top: -2px !important;
  border-radius: 0;
}
