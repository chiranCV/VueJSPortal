.qty-box{
  input {
      padding: 5px;
      width: 100px;
      text-align: right;
  }
}
input[type='number'],input[type="date"],
.date-picker input
{
  height: 40px;
  padding-left: 15px;
  padding-right: 15px;
}
/* Dotted border line */

.dotted-border-block {
  width: 100%;
  margin-top: 40px;
  height: 13px;
  float: left;
  position: relative;
  span {
    position: absolute;
    top: 0;
    bottom: 0;
    height: auto;
    left: 0;
    right: 0;
    width: auto;
    background-image: url("./assets/dot.png");
    background-repeat: repeat-x;
    background-size: 12px;
  }
}