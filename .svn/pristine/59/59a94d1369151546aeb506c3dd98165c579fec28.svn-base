.product-details-page{
    img{
        width: 100%;
    }
        .product-image{
            img{
            width: 100%;
        }
    }
    
  h6 {
    font-size: 18px;
    line-height: 23px;
    padding-top: 10px;
    max-width: 240px;
    font-family: "Verdana", sans-serif;
    white-space: nowrap;
    overflow: hidden !important;
    text-overflow: ellipsis;
    margin-bottom: 5px;
  }

  ul {
    list-style: none;
    padding-left: 0;
    width: 100%;
    margin-bottom: 0;

    li {
      float: left;
      padding-right: 21px;
    }
  }

  

  .list-avatar-block {
    background-color: #f2f2f2;
    padding: 8px 12px;
    border-right: 1px solid $black-lighter;

    img {
      max-width: 100%;
      height: 100%;
      object-fit: cover;
    }
  }

  a {
    color: $black-light;
  }
.dropdown-list-text-only{
    span {
        float: left;
      }
  .list-dropdown-text {
    padding-bottom: 5px;
    position: relative;

    .zfbtn {
      padding-left: 20px;
    }

    ul {
      width: 1vw;
      min-width: 65px;
      padding-bottom: 0;
      padding: 0;
      right: -20px;
      left: auto !important;

      li {
        width: 100%;
        padding: 5px;
      }
    }
    .down-arrow {
        &:before {
          content: "";
          background-image: url("./assets/arrow-blue-down.svg");
          background-repeat: no-repeat;
          width: 11px;
          height: 6px;
          position: absolute;
          right: -15px;
          top: 5px;
        }
      }
  }

  

  .v-center-block {
    padding-top: 30px;
  }

  .v-center-btn-block {
    padding-top: 20px;
    float: right;
  }

  .list-price-text {
    font-family: Arial;
    font-size: 16px;
    font-weight: bold;
    line-height: 18px;
    text-align: right;
    color: #000000;
  }

  .auro-increment-input {
    input {
      padding: 5px;
      text-align: center;
    }

    span {
      display: block;
      float: none;
      text-align: center;
      padding-top: 4px;
    }
  }

  .listThirdBlock {
    float: right;
    padding-right: 0;
  }
}
}