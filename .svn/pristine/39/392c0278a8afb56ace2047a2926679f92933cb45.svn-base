<template>
  <div>
    <span v-bind:class="indicatorColor">{{indicatortext}}</span>
  </div>
</template>
<script>
export default {
  name: "StockIndicator",
  props: {
    stockModel: {
      type: Object,
      required: true
    }
  },
  data() {
    return {
      indicatorColor: "text-green",
      indicatortext: "OutOf stock"
    };
  },
  method: {
    getIndicatorColorandtext() {
      if (this.StockModel) {
        if (
          this.stockModel.Inventory <= this.stockModel.StockRange.OutOfStock
        ) {
          this.indicatorColor = "text-red";
          this.indicatortext = "OutOf stock";
        } else if (
          this.stockModel.Inventory > this.stockModel.StockRange.OutOfStock
          && this.stockModel.Inventory <= this.stockModel.StockRange.LowStock
        ) {
          this.indicatorColor = "text-orange";
          this.indicatortext = "low stock";
        } else {
          this.indicatorColor = "text-green";
          this.indicatortext = "In stock";
        }
      }
    }
  }
};
</script>
