.basket-page {
  .list-dropdown-text-container {
    span {
      float: left;
    }
    .list-dropdown-text {
      padding-bottom: 5px;
      position: relative;
      .down-arrow {
        &:before {
          content: "";
          background-image: url("./assets/arrow-blue-down.svg");
          background-repeat: no-repeat;
          width: 11px;
          height: 6px;
          position: absolute;
          right: -15px;
          top: 5px;
        }
      }
      ul {
        width: 1vw;
        min-width: 65px;
        padding-bottom: 0;
        padding: 0;
        right: -37px;
        left: auto !important;
        li {
          width: 100%;
          padding: 5px;
          float: left;
          a {
            color: $black !important;
          }
        }
      }
    }
  }
  .ioo-table {
    textarea {
      min-height: 105px;
      resize: none;
      font-size: 10px;
        line-height: 16px;
        color: $black-light;
    }
    .qty-box {
      input {
        width: 70px;
      }
    }
    .dDPContainer {
      input {
        width: 60px;
      }
    }
  }
  .basket-dblock {
    border: 1px solid #ddd;
    padding: 20px;
    p {
      font-size: 13px;
    }
  }
  .basket-dCalender-block {
    margin-top: 40px;
  }
  .basket-icon-block {
    margin-top: 40px;
    width: 100%;
    img {
      width: 15px;
      height: 15px;
      margin-right: 10px;
    }
  }
  .ioo-table-cell {
    div,span,a {
      font-size: 11px;
    }
  }
}

